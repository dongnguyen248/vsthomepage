@model IEnumerable<DTO.ImageDTO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-detail" style="width:980px;margin-left:20%">
    <div class="col-xs-10">
        <center><h4 class="wow fadeInUp" data-wow-delay="0.6s" style="margin-left:auto; margin-right:auto">NEWS & INFORMATION</h4></center>
        <div style="font-size:14px; font-family:Tahoma; color:#797977; width:850px">
            @foreach (var image in Model)
            {
                <div class="col-xs-4" style="height:160px;margin-bottom:20px;padding-right:3px;padding-left:0">
                    <div class="col-md-12">
                        <a href="@image.FilePath" data-lightbox="image-1" data-title="@image.ImageDescription">
                            <img class="wow fadeInUp lazy" data-wow-delay="0.7s" data-src="@image.MinimalFilePath" style="width: 100%;height:143px" />
                        </a>
                    </div>
                    <div class="col-md-12">
                        <span class="galery-link">@image.ImageDescription</span>
                    </div>
                </div>
            }
            <div class="clear"></div>
        </div>
    </div>
</div>

@section LeftMenu {
    <ul class="menu-vertical" style="color:gray;margin-top:18.5px;font-size:8px;">
        <li class="mv-item border-menu" style="background-color:white;border-top:1px solid gray;border-bottom:1px solid gray"><a href="news-information.html" style="font-size: 11pt; font-weight:bold; font-family:Tahoma; background-color:#a2c9f0">▶&nbsp;&nbsp;<b>News & Information</b></a></li>
        <li class="mv-item border-menu" style="background-color:white;border-bottom:1px solid gray;"><a href="facilities.html" style="font-size: 11pt; font-weight:bold; font-family:Tahoma">▶&nbsp;&nbsp;<b>Facilities</b></a></li>
        <li class="mv-item border-menu" style="background-color:white;border-bottom:1px solid gray;"><a href="coporate-citizen.html" style="font-size: 11pt; font-weight:bold; font-family:Tahoma">▶&nbsp;&nbsp;<b>Coporate Citizen</b></a></li>
    </ul>
}

@section footerJs {
    @Scripts.Render("~/js/jquery.lazy")
    <script>
        $(function () {
            $('.lazy').lazy({
                threshold: 0
            });
        });
    </script>
}