@{
    ViewBag.Title = "SupplierRegiter";
    Layout = "~/Views/Shared/_Layout_Purchasing.cshtml";
}
<div class="container">
    <h3 class="swrap_one">
        Register Supplier
    </h3>
    <div class="content-detail of-x" style="width:100%;">
        <div class="col-xs-12">
            <button type="button" class="btn btn-primary btn-md dangky" data-toggle="modal" data-target="#registerModal">
                Register
            </button>
            <button type="button" class="btn btn-primary btn-md " id="Logout">
                Logout
            </button>
            <div class="row">
                <table id="supplierInfo" class="display table table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>SEQ</th>
                            <th>Name Company</th>
                            <th>Writer</th>
                            <th>Created Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>

                </table>
            </div>

        </div>
    </div>
    <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel" id="registerModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="gridSystemModalLabel">Register Supplier</h4>
                </div>
                <div class="modal-body">
                    <form id="add-new-supplier">
                        <div class="form-group">
                            <label for="name-company" class="control-label">Name Company:</label>
                            <input type="text" class="form-control" name="NameCompany" required id="name-company">
                        </div>
                        <div class="form-group">
                            <label for="date-company" class="control-label">Date Of Incorporation:</label>
                            <input type="datetime" class="form-control" hasDatepicker" placeholder="dd-mm-yyy" readonly name="DayoIncor" required id="date-company">
                        </div>
                        <div class="form-group">
                            <label for="who-company" class="control-label">Representative:</label>
                            <input type="text" class="form-control" name="Representative" required id="who-company">
                        </div>
                        <div class="form-group">
                            <label for="product-company" class="control-label">Main Product:</label>
                            <input type="text" class="form-control" name="MainProduct" required id="product-company">
                        </div>
                        <div class="form-group">
                            <label for="customer-company" class="control-label">Main Customer:</label>
                            <input type="text" class="form-control" name="MainCustomer" required id="customer-company">
                        </div>
                        <div class="form-group">
                            <label for="person-company" class="control-label">Contact:</label>
                            <input type="text" class="form-control" name="Contact" required id="person-company" placeholder="phone number, email">
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="control-label">Question:</label>
                            <textarea class="form-control" name="QuestionContent" id="message-text"></textarea>
                        </div>
                        <div class="form-group" id="fileupload">
                            <label for="person-company" class="control-label">File Attach:(Investment License, Business license ...)</label>
                            <br />
                            <label class="btn btn-default">
                                <b>+</b><span> Add File </span>
                            </label>
                        </div>
                        <span id="inputhidden"></span>
                        <div class="listFileImport">
                            <ul class="list"></ul>
                        </div>
                        <div class="form-group">
                            <label for="userview-company" class="control-label">User:</label>
                            <input type="text" class="form-control" required id="userview-company" name="username" placeholder="User For View Question">
                        </div>
                        <div class="form-group">
                            <label for="passwordview-company" class="control-label">Password:</label>
                            <input type="password" class="form-control" required id="passwordview-company" placeholder="Password For View Question">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <input type="submit" class="btn btn-primary" id="btnAddNewFile" value="Save changes">
                        </div>
                    </form>

                </div>

            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div>

</div>


<div id="checkUser" class="modal fade">
    <div class="modal-dialog modal-login">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Supplier Login</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <!--<form id="checkSupplier">-->
                <div class="form-group">
                    <i class="fa fa-user"></i>
                    <label for="username"> User Name:</label>
                    <input type="text" id="username" class="form-control" placeholder="Username" required="required">
                </div>
                <div class="form-group">
                    <i class="fa fa-lock"></i>
                    <label for="password"> Password:</label>
                    <input type="password" id="password" class="form-control" placeholder="Password" required="required">
                </div>
                <div class="form-group">
                    <input type="button" id="submitForm" class="btn btn-primary btn-block btn-lg" value="Login" />
                </div>
                <!--</form>-->
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="AnswerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="exampleModalLabel">New message</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="control-label">Recipient:</label>
                        <p>this old question</p>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="control-label">Message:</label>
                        <textarea class="form-control" id="message-text"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </div>
</div>

