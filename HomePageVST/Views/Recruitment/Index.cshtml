@model IEnumerable<DTO.RecruitmentDTO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-detail" style="width:980px;margin-left:20%">
    <div class="col-xs-10">
        <center><h4 class="wow fadeInUp" data-wow-delay="0.6s" style="margin-left:auto; margin-right:auto">RECRUITMENT INFORMATION</h4></center>
        <center>
            <table border="1" cellpadding="0" cellspacing="0" style="width:600px">
                <tr style="font-size:15px; font-family:Tahoma">
                    <td align="center">
                        <b>HR Team - Ms. Tran Diem Trinh</b><br />
                        Tel: 0251.3560 360 - Ext : 1176<br />
                        Email: tran.trinh@posco.net<br />
                    </td>
                    <td align="center">
                        <b>HR Deparment - Posco VST Company</b> <br />
                        Road 319B, Nhon Trach, Dong Nai Pro, Vietnam. <br />
                        Tel: +84-(0)251-3560 360 <br />
                    </td>
                </tr>
            </table>
        </center>

        <div style="font-family:Tahoma; color:#797977">
            <div>
                <div style="font-family:Tahoma; color:#797977">

                    <div>
                        @foreach (var item in Model)
                        {
                            <div id="accordian" style="font-size:15pt; font-family:Tahoma; color:#797977; width:100%; text-align:left">
                                <ul>
                                    <li>
                                        <div class="h5" style="font-family:tahoma;font-size:15px; background:#F0F0F0">
                                            <div>
                                                <div style="text-align:left; float:left">
                                                    <span id="MainContent_ListView2_Label5_0">@item.JobTitle</span>
                                                </div>
                                                <div style="text-align:right">
                                                    @if (item.DateExpired != null)
                                                    {
                                                        <span id="MainContent_ListView2_Label6_0">Date Expired</span>
                                                        <span id="MainContent_ListView2_Label4_0">@Convert.ToDateTime(item.DateExpired).ToShortDateString()</span>
                                                    }
                                                    else
                                                    {
                                                        <span id="MainContent_ListView2_Label6_0"></span>
                                                        <span id="MainContent_ListView2_Label4_0">&nbsp; </span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <ul style="overflow: hidden; display: none; padding-left:10px">
                                            <li>
                                                @if (item.Salary != null)
                                                {
                                                    <div>
                                                        <p><span style="font-weight:bold">Benefits</span></p>
                                                        <p>&#128185; Salary: @item.Salary</p>
                                                    </div>
                                                }
                                                <div class="divleft">
                                                    <p>
                                                        <span style="font-weight:bold">Job Description </span>
                                                    </p>
                                                    @Html.Raw(item.JobDescription)
                                                    <p>
                                                        <span style="font-weight:bold">Job Requirement </span>
                                                    </p>
                                                    @Html.Raw(item.JobRequirement)
                                                </div>
                                            </li>
                                        </ul>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>
                    <div class="clear"></div>
                </div>
                <div>
                </div>
            </div>
        </div>
    </div>
</div>

